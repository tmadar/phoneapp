<%= form_for(@user,:html => { :class => "form-horizontal" }, :remote => true) do |f|%>
	<h5>Name:</h5>
	<%= f.text_field :name %>
	<h5>Callback #:</h5>
	<%= f.text_field :phone %>
	<h5>Email:</h5>
	<%= f.text_field :email %>
	<h5>Priority:</h5>
	<%= f.text_field :priority, :class => "span1" %>
	<div>
		<%= f.button :class => "btn btn-large", :style => "margin-top: 10px" %>
	</div>
<% end %>