<div class="content">
	<h1>Levion Automated Telephone System Home Page</h1>
	<br>
	<br>
	<br>
	<br>
	<% @calls.each do |call| %>
		<table class="table table-striped table-bordered table-condensed">
			<tr>
				<th>Time:</th>
				<th>Duration:</th>
				<th>Callback #:</th>
				<th>Call Status:</th>
				<th>Disposition:</th>
			</tr>
			<tr>
				<td><%= call.received_at %></td>
				<td><%= call.duration %></td>
				<td><%= call.caller %></td>
				<td><%= call.status %></td>
				<td>
					<select name="choose">
						<option selected>Currently <%= call.disposition %></option>
						<option value="Open">Open</option>
						<option value="Closed">Closed</option>
						<option value="Unresponsive">Unresponsive</option>
						<option value="Rescheduled">Rescheduled</option>
					</select>
				</td>
			</tr>
		</table>
		<%= link_to('View Details',  records_path(:id => call.id), :method => :get, :class => "popover-comment", :rel => "popover", :title => "Recent Comment", :"data-content" => "#{call.last_comment}")%>
		<br>
		<br>
		<br>
		<br>
	<% end %>
</div>
