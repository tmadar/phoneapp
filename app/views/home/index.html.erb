<div class="content">
	<h1>Levion Automated Telephone System Home Page</h1>
	
	<% @calls.each do |call| %>
		<table class="table table-striped table-bordered table-condensed">
			<tr>
				<th>Time:</th>
				<th>Duration:</th>
				<th>Callback #:</th>
				<th>Call Status:</th>
				<th>Disposition:</th>
			</tr>
			<tr>
				<td><%= call.received_at %></td>
				<td><%= call.duration %></td>
				<td><%= call.caller %></td>
				<td><%= call.status %></td>
				<td>
					<div class="btn-toolbar">
						<div class="btn-group">
							<button class="btn btn-small dropdown-toggle" data-toggle="dropdown">Choose
								<span class="caret"></span>
							</button>
							<ul class="dropdown-menu">
								<li><a href="#">Open</a></li>
								<li><a href="#">Closed</a></li>
								<li><a href="#">Unresponsive</a></li>
								<li><a href="#">Rescheduled</a></li>
							</ul>
						</div>
					</div>
				</td>
			</tr>
		</table>
		<%= link_to "View Call Comments"%>
		<br>
		<br>
		<br>
		<br>
	<% end %>
</div>
