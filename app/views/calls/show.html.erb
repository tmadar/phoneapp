<div class="content">
	<h1>Call Record</h1>

	<%= link_to "Go Back", root_path %>

	<table class="table table-bordered table-condensed table-striped call-padded">
		<tr>
			<th>Time of Call</th>
			<td><%= @call.received_at %></td>
		</tr>
		<tr>
			<th>Callback #</th>
			<td><%= @call.caller %></td>
		</tr>
		<tr>
			<th>Duration</th>
			<td><%= @call.duration %></td>
		</tr>
		<tr>
			<th>Call Status</th>
			<td><%= @call.status %></td>
		</tr>
		<tr>
			<th>Disposition</th>
			<td><%= @call.disposition %></td>
		</tr>
		<tr>
			<th>Reschedule Time</th>
			<td></td>
		</tr>
		<tr>
			<th>Audio Message</th>
			<td>
				<% if @call.recording  != nil then%>
					<%= link_to "Link", @call.recording %>
				<% else %>
					No Messages
				<% end %>
			</td>
		</tr>
		<tr>
			<th>Zendesk Ticket</th>
			<td></td>
		</tr>
		<tr>
			<th>Last Comment</th>
			<td><%= @call.last_comment%></td>
		</tr>
	</table>
	
	<div id="comments">
		<%= render 'comments'%>
	</div>
	<div class="new_comment">
		<h2>Add a Comment</h2>
		<%= render 'form' %>
	</div>
</div>